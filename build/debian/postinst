#!/bin/bash
# postinst script for pmm-agent
#
# see: dh_installdeb(1)

if [ -f /usr/share/debconf/confmodule ]; then
    . /usr/share/debconf/confmodule
fi

for file in node_exporter mysqld_exporter postgres_exporter mongodb_exporter proxysql_exporter
do
    ln -s -f /usr/local/percona/$file /usr/bin/$file
done
for file in pmm-admin pmm-agent
do
    ln -s -f /usr/sbin/$file /usr/bin/$file
done
case "$1" in
    configure)
      chown -R pmm-agent:pmm-agent /usr/local/percona
      if [ ! -f /usr/local/percona/pmm-agent.yaml ]; then
          install -m 0660 -o pmm-agent -g pmm-agent /dev/null /usr/local/percona/pmm-agent.yaml
      fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

#DEBHELPER#

exit 0
